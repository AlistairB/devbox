#!/bin/bash
set -Eexuo pipefail

sudo apt install -y \
    libicu-dev \
    libtinfo-dev \
    libgmp-dev

# sudo add-apt-repository -y ppa:hvr/ghc
# waiting on focal support
sudo add-apt-repository -y "deb http://ppa.launchpad.net/hvr/ghc/ubuntu eoan"
sudo apt update
sudo apt install -y ghc-8.6.5 ghc-8.8.3 cabal-install-3.2

echo 'export PATH=$PATH:/opt/ghc/bin' >> $HOME/.profile
